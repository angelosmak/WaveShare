<h2><%= @beach.name %></h2>
<p><%= @beach.description %></p>
<p><%= @beach.address %></p>

<h1>events</h1>
<h1>Reviews</h1>
<% @reviews.each do |review| %>
  <h2><%= review.title %></h2>
  <p><%= review.content %></p>
  <%# displaying star-reviews %>
  <p><% review.rating.times do %>
  <i class="fa-solid fa-star" style="color: #ffe71e;"></i>
  <% end %></p>
  <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
<%= link_to "Review this Beach", new_beach_review_path(@beach) %>

<% @events.each do |event| %>
  <h2><%= event.title %></h2>
  <p><%= event.date %></p>
  <p><%= event.description %></p>
  <p><%= event.user.email %></p>
  <%= link_to "Delete", event_path(event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
<%= link_to 'New Event', new_beach_event_path(@beach) %>
