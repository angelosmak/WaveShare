<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for([@beach, @review], data: {controller: "form-submit"}) do |f| %>
        <%= f.input :title, required: true, placeholder: "Your review title"%>
        <%= f.input :content, placeholder: "Describe your Experiences"%>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: { controller: "star-rating", action: "change->form-submit#submit"} }  %>
        <%= f.submit class:"d-none" %>
      <% end %>
      <%= link_to "Go back to #{@beach.name}", beaches_path(@review.beach) %>
    </div>
  </div>
</div>
